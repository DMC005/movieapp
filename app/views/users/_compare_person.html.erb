<section class="person">
  <h1>
    <% if compare.user.picture? %>
      <span class="avatar" style="background-image:url(<%= strip_schema(compare.user.picture_url) %>)"></span>
    <% end %>
    <%= link_to user_name(compare.user), watched_path(compare.user) %>
  </h1>
  <p class="watched"><%= pluralize_movies compare.watched_count %></p>

  <% unless_empty compare.fav_directors do |directors| %>
  <section class="directors">
    <h1>Top directors:</h1>
    <ol><% directors.each do |name| %>
      <li><%= link_to name, director_path(name) %></li>
    <% end %></ol>
  </section>
  <% end %>
  
</section>
